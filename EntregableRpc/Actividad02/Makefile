
# This is a template Makefile generated by rpcgen

# Parameters

CLIENT = registro_escolar_client
SERVER = registro_escolar_server

SOURCES_CLNT.c = registro_escolar_client.c
SOURCES_CLNT.h = 
SOURCES_SVC.c = registro_escolar_server.c
SOURCES_SVC.h = 
SOURCES.x = registro_escolar.x

TARGETS_SVC.c = registro_escolar_svc.c  registro_escolar_xdr.c 
TARGETS_CLNT.c = registro_escolar_clnt.c registro_escolar_xdr.c 
TARGETS = registro_escolar.h registro_escolar_xdr.c registro_escolar_clnt.c registro_escolar_svc.c

OBJECTS_CLNT = $(SOURCES_CLNT.c:%.c=%.o) $(TARGETS_CLNT.c:%.c=%.o)
OBJECTS_SVC = $(SOURCES_SVC.c:%.c=%.o) $(TARGETS_SVC.c:%.c=%.o)
# Compiler flags 

INCLUDES += -I/usr/include/tirpc
CFLAGS += -gfull -O0 $(INCLUDES) -fsanitize=address
LDLIBS += -lnsl -ltirpc -lsqlite3 -fsanitize=address
RPCGENFLAGS = 

# Targets 

all : $(CLIENT) $(SERVER)

$(TARGETS) : $(SOURCES.x) 
	rpcgen $(RPCGENFLAGS) $(SOURCES.x)

$(OBJECTS_CLNT) : $(SOURCES_CLNT.c) $(SOURCES_CLNT.h) $(TARGETS_CLNT.c) 

$(OBJECTS_SVC) : $(SOURCES_SVC.c) $(SOURCES_SVC.h) $(TARGETS_SVC.c) 

$(CLIENT) : $(OBJECTS_CLNT) 
	$(CC) -o $(CLIENT) $(OBJECTS_CLNT) $(LDLIBS) 

$(SERVER) : $(OBJECTS_SVC) 
	$(CC) -o $(SERVER) $(OBJECTS_SVC) $(LDLIBS)

clean:
	 $(RM) core $(TARGETS) $(OBJECTS_CLNT) $(OBJECTS_SVC) $(CLIENT) $(SERVER)

